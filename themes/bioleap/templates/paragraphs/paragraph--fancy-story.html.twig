{% set imageURI = file_url(content.field_pg_fstory__image[0]['#item'].entity.uri.value) %}
{% set imageALT = content.field_pg_fstory__image[0]['#item'].alt %}
{% set copy = content.field_pg_fstory__copy.0 %}
{% set side = content.field_pg_fstory__image_side['#items'][0].value %}
{% set heading = content.field_pg_fstory__heading.0 %}
{% set ctaURL = content.field_pg_fstory__cta[0]['#url'] %}
{% set ctaTEXT = content.field_pg_fstory__cta[0]['#title'] %}
{% set actionURL = file_url(content.field_pg_fstory__packet['#items'][0].entity.uri.value) %}



{% block paragraph %}
<div class="bl_surface">
    <div class="bl_surface__section bl_surface__section--100">
        <div class="bl_fancy-story bl_fancy-story--{{side}}">
        {% block content %}
            <div class="bl_fancy-story__image-wrapper">
                <img class="bl_fancy-story__image" src="{{imageURI}}" alt="{{imageALT}}">
            </div>
            <div class="bl_fancy-story__copy-block">
                <h5 class="bl_fancy-story__heading">{{heading}}</h5>
                {% if heading %}<span class="bl_heading-rule"></span>{% endif %}
                <span class="bl_fancy-story__copy">{{copy}}</span>
                {% if ctaURL %}
                    <a class="bl_fancy-story__cta" href="{{ctaURL}}">{{ctaTEXT}}</a>
                {% endif %}
                {% if actionURL|length > 1 %}
                    <a target="_blank" class="bl_fancy-story__action-packet" href="{{actionURL}}">Download Action Packet</a>
                {% endif %}
            </div>
        {% endblock %}
        </div>
    </div>
</div>

{% endblock paragraph %}
